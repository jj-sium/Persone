<Window x:Class="ghinelli.johan._4h.persone.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ghinelli.johan._4h.persone"
        mc:Ignorable="d"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        Title="Progetto Johan Ghinelli - 4 h">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnAprifile" Margin="10" Width="100" FontSize="30"></Button>
        </StackPanel>

        <DataGrid x:Name="dgDati" Grid.Row="1" LoadingRow="dgbDati_LoadingRow" ></DataGrid>
        </Grid>
</Window>


